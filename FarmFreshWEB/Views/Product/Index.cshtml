@model IEnumerable<ProductModel>

@{
	ViewData["Title"] = "Products";
}

@*<h1>Products</h1>*@

<div class="row">
	@foreach (var item in Model)
	{
		<div class="col-4">
			<img src="/media/screen3/@item.Image" class="image-fluid" alt="" width="100" height="100"/>
			<h4 style="font-weight:Helvetica Neue;font-size:21pt;"><b>@item.Name</b></h4>			
			<div>
				@Html.Raw("Packet")
			</div>
			<p>
				<a class="btn btn-primary" asp-controller="Cart" asp-action="Add" asp-route-id="@item.Id">Add to cart</a>
			</p>
		</div>		
	}

	<div>
		<ul class="pagination">
			@for (var i = 1; i <= ViewBag.TotalPage; i++)
			{
				<li class="page-item @(i == ViewBag.PageNumber ? "active" : "")">
					<a asp-page="/product/@ViewBag.CategorySlug" asp-route-currentpage="@i" class="page-link">@i</a>
				</li>
			}
		</ul>
	</div>

